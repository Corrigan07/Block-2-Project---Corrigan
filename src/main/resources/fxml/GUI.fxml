      <ImageView fx:id="roomImageView" fitHeight="311.0" fitWidth="618.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.8), 10, 0, 0, 0);;" BorderPane.alignment="CENTER">
