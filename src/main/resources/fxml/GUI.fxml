               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ListView fx:id="inventoryListView" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #1e1e1e;" VBox.vgrow="ALWAYS" />
